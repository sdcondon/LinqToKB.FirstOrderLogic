<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>SCFirstOrderLogic</AssemblyName>
    <RootNamespace>SCFirstOrderLogic</RootNamespace>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <!--<PackageIcon>SCFirstOrderLogicIcon.png</PackageIcon>-->
    <Description>First-order logic inference engine. Includes some language integration features.</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>inference-engine first-order-logic knowledge-base linq</PackageTags>
    <Product>SCFirstOrderLogic</Product>
    <PackageId>SCFirstOrderLogic</PackageId>
    <Nullable>enable</Nullable>
    <PackageIcon>SCFirstOrderLogic.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="SCFirstOrderLogic.Tests" />
    <InternalsVisibleTo Include="SCFirstOrderLogic.Benchmarks" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\SCFirstOrderLogic.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Inference\BackwardChaining\" />
  </ItemGroup>

</Project>

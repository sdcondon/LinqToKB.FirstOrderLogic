@inherits ComponentBase
@inject HttpClient Http

<MudMarkdown Value="@markdown" OverrideHeaderTypo="OverrideHeaderTypo" />

@code {
    private string markdown = string.Empty;

    [Parameter]
    public string? MarkdownUri { get; set; }

    protected override async Task OnInitializedAsync()
    {
        markdown = await Http.GetStringAsync(MarkdownUri);
    }

    protected Typo OverrideHeaderTypo(Typo typo)
    {
        return typo switch
        {
            Typo.h1 => Typo.h3,
            Typo.h2 => Typo.h4,
            Typo.h3 => Typo.h5,
            _ => Typo.h6
        };
    }
}
